          <h5 class="item-qty">0</h5>
          <a class="btn btn-warning add-item">+</a>
          <a class="btn btn-warning remove-item">-</a>
        </div>
      </li>
      <% } %>
      <div class="bg-warning w-50 p-3" id="soups">
        <h1>Soups</h1>
      </div>
      <% for (const menuItem of soups) { %>
      <li class="card menu-item bg-light p-2 mb-5 d-flex flex-row">
        <img src=<%= menuItem.thumbnail_url %> class="card-img-left" alt="...">
        <div class="card-body d-flex flex-column justify-content-between" data-itemId="<%= menuItem.id %>">
          <h1 class="card-title"> <%= menuItem.name %> </h1>
          <h4 class="card-text"> <%= menuItem.description %> </h4>
          <h5> <%= `$${(menuItem.price / 100).toFixed(2)}` %> </h5>
          <h5 class="item-qty">0</h5>
          <a class="btn btn-warning add-item">+</a>
          <a class="btn btn-warning remove-item">-</a>
        </div>
      </li>
      <% } %>
      <div class="bg-warning w-50 p-3" id="alcohol">
        <h1>Alcohol</h1>
      </div>
      <% for (const menuItem of alcohol) { %>
        <li class="card menu-item bg-light p-2 mb-5 d-flex flex-row">
          <div class="card-body d-flex flex-column justify-content-between" data-itemId="<%= menuItem.id %>">
            <h1 class="card-title"> <%= menuItem.name %> </h1>
            <h4 class="card-text"> <%= menuItem.description %> </h4>
            <h5> <%= `$${(menuItem.price / 100).toFixed(2)}` %> </h5>
            <h5 class="item-qty">0</h5>
            <a class="btn btn-warning add-item">+</a>
            <a class="btn btn-warning remove-item">-</a>
          </div>
        </li>
      <% } %>
      <div class="bg-warning w-50 p-3" id="beverages">
        <h1>Beverages</h1>
      </div>
      <% for (const menuItem of beverages) { %>
        <li class="card menu-item bg-light p-2 mb-5 d-flex flex-row">
