<!DOCTYPE html>
<html lang="en">

<head>
  <title>Aa-So-Sa Asian Fusion Menu</title>

  <%- include('partials/_header') %>


  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/client-menu.js"></script>


</head>

<body>
  <%- include('partials/_navbar') %>
  <h1>Our Menu</h1>

  <div class="container body">
    <ul style="list-style-type: none">
      <% for (const menuItem of menuItems) { %>
      <li class="bg-light p-2 mb-5 d-flex flex-row">
          <img src=<%= menuItem.thumbnail_url %> class="card-img-left" alt="...">
          <div class="card-body d-flex flex-column justify-content-between" data-itemId="<%= menuItem.id %>">
            <h5 class="card-title"> <%= menuItem.name %> </h5>
            <p class="card-text"> <%= menuItem.description %> </p>
            <p> <%= `$${(menuItem.price / 100).toFixed(2)}` %> </p>
            <div class="buttons">
              <p class="item-qty">0</p>
              <a class="btn btn-dark remove-item">-</a>
              <a class="btn btn-dark add-item">+</a>
            </div>
        </div>
      </li>
      <% } %>
    </ul>
  </div>

</body>

</html>
