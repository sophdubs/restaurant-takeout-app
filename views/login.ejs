<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('partials/_header') %>


  <title>Document</title>

</head>

<body>
  <%- include('partials/_navbar') %>
  <% if (errorMsg) { %>
  <div class="alert alert-danger text-center mt-4" role="alert">
    <p><%= errorMsg %></p>
  </div>
  <% } %>
  <div class="container text-center">
    <form class="border border-dark p-4 mt-5" method="post" action="/login">
      <h3>Login</h3>
      <div class="form-group">
        <input name="userEmail" type="email" class="form-control" id="userEmail" placeholder="Enter email">
      </div>
      <div class="form-group">
        <input name="userPassword" type="password" class="form-control" id="userPassword" placeholder="Password">
      </div>
      <button type="submit" class="btn btn-dark">Login</button>
    </form>
  </div>
</body>

</html>
