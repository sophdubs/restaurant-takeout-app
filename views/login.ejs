<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/_header') %>
</head>
<body class="login">
  <div class="login-container">
    <% if (errorMsg) { %>
    <div class="login-error-msg">
      <p><%= errorMsg %></p>
    </div>
    <% } %>
    <div class="login-form text-center">
      <form method="post" action="/login">
        <h1 class="login-logo">AaSoSa</h1>
        <div class="form-group">
          <input name="userEmail" type="email" class="form-control" id="userEmail" placeholder="Enter email">
        </div>
        <div class="form-group">
          <input name="userPassword" type="password" class="form-control" id="userPassword" placeholder="Password">
        </div>
        <button type="submit">Login</button>
      </form>
    </div>
  </div>
</body>

</html>
